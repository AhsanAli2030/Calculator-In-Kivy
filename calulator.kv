<kivyBuilderFunction>:
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id: calculator_input
            text:"0"
            halign:"right"             # this is used to set text inside the Text Input Box
            font_size:65
            size_hint:(1,0.15)


        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"%"
                on_press:root.Operation_Function("%")

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"<<"
                on_press:root.remove_Last()

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"C"
                id: clear
                on_press:root.Clear_Function()

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"/"
                on_press:root.Operation_Function("/")



            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"7"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(7)
                
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"8"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(8)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"9"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(9)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"X"
                on_press:root.Operation_Function("X")




            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"4"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(4)


            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"5"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(5)
                
            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"6"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(6)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"-"
                on_press:root.Operation_Function("-")





            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"1"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(1)

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"2"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(2)



            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"3"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(3)
                
            

            

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"+"
                on_press:root.Operation_Function("+")



            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"+/-"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.pos_neg_Function()

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"0"
                background_color:(157/255,157/255,157/255,1)
                on_press:root.button_click(0)


            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"."
                background_color:(157/255,157/255,157/255,1)
                on_press:root.dot_Function()
                
            

            

            Button:
                size_hint:(0.2,0.2)
                font_size:32
                text:"="
                on_press:root.Equals_Function()
                



            
     
        
    

        

                
                